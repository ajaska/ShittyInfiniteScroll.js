{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src", 
    "strict": true, 
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true, 
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
